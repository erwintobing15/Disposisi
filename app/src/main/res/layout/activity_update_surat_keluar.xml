<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.transaksi.UpdateSuratKeluarActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/update_surat_keluar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarTheme" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:padding="16dp">

            <!--nomor agenda-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Nomor Agenda" />

            <EditText
                android:id="@+id/et_insert_nomor_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Agenda"
                android:inputType="number"
                />

            <!--tujuan-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Tujuan" />

            <EditText
                android:id="@+id/et_insert_tujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tujuan"
                android:inputType="text"/>

            <!--no surat-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Nomor Surat" />

            <EditText
                android:id="@+id/et_insert_nomor_surat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Surat"
                android:inputType="text"/>

            <!--isi ringkas-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Isi Ringkas" />

            <EditText
                android:id="@+id/et_insert_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Isi Ringkas"
                android:inputType="textMultiLine"
                android:maxLines="6"/>

            <!--tanggal surat-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Tanggal Surat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_insert_tanggal_surat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <ImageView
                    android:id="@+id/iv_insert_calender"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingStart="5dp"
                    android:src="@drawable/icon_calender"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!--kode klasifikasi-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Keterangan" />

            <EditText
                android:id="@+id/et_insert_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Keterangan"
                android:inputType="text"/>

            <!--Foto-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_insert_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="pilih gambar" />

                <Button
                    android:id="@+id/btn_insert_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="pilih pdf" />

                <Button
                    android:id="@+id/btn_insert_docx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="pilih doc" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_surat_image"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_surat_masuk_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16dp"/>

            <!--garis bawah-->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <!--tombol simpan-->
                <Button
                    android:id="@+id/btn_batal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batal"
                    android:layout_margin="8dp"/>

                <!--tombol batal-->
                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:layout_margin="8dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>